{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/models/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@knexConfig": ["knexfile"]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register",
      "dotenv/config"
    ]
  }
}
